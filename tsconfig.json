{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "allowJs": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "src"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}